{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",

    "rootDir": ".",
    "outDir": "dist",

    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "apps/**/*",
    "shared/**/*",
    "workers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
