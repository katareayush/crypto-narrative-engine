{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "rootDir": ".",
    "outDir": "dist",

    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": [
    "apps/**/*",
    "shared/**/*",
    "workers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
